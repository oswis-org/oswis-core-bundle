table, td, tr, div, p, span {
    font-size: 14px;
    text-align: justify;
}

.e-mail-list {
    border: 1px solid black;
    /* border-collapse: collapse; */
}

.e-mail-list td {
    border: 1px solid grey;
}

a, a:focus, a:visited, a:active {
    color: #FFFFFF !important;
    text-decoration: none !important;
    padding: 0;
    margin: 0;
}

a:hover {
    color: #CCCCCC !important;
    text-decoration: underline !important;
}

h1, h2, h3 {
    color: #FFFFFF;
}

td {
    width: 8.33%;
    padding: 1em;
}

.blue-white {
    background-color: #006FAD;
    color: white !important;
}

.blue-white * {
    color: #ffffff;
}

@media print {
    body {
        font-size: 11px;
        color: black;
    }

    #logo {
        width: 60%;
        max-width: 250px;
    }

    div, p, li {
        text-align: justify;
        margin-top: 0.5em;
        margin-bottom: 0.2em;
    }

    @page {
        size: portrait;
        margin: 10mm 10mm;
    }

    * {
        margin: 0;
        padding: 0;
    }
}
