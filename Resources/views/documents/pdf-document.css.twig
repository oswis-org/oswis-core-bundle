/**
Default CSS styles for PDF documents.
OSWIS, Jakub Zak <mail@jakubzak.eu>
*/

/*noinspection CssUnknownProperty*/
@page {
    size: 21cm 29.7cm;
    margin: 1cm;
    margin-header: 0;
    margin-footer: 0;
    font-size: 11pt;
}

html {
    margin: 0;
    padding: 0;
    font-size: 11pt;
}

body {
    margin: 0;
    padding: 0;
    font-size: 11pt;
}

h1, h2, h3 {
    color: #006FAD;
    padding-bottom: 1px;
    margin-bottom: 1px;
}

h1 {
    font-size: 18px;
}

h2 {
    font-size: 16px;
}

h3 {
    font-size: 14px;
}

table {
    border-collapse: collapse;
    border: 0 none;
}

p {
    margin-top: .6em;
    margin-bottom: .5em;
}

.spacer {
    min-height: 2em;
    min-width: 2em;
}

.center {
    text-align: center;
}

.justify {
    text-align: justify;
}

.left {
    text-align: left;
}

.right {
    text-align: right;
}

.document {
    width: 96%;
    margin: 1em 2% 1em;
}

.header {
    width: 100%;
    font-weight: bold;
    text-align: center;
}

.decree-id {
    width: 96%;
    margin: 0 2%;
    text-align: right;
    padding-top: 0.5em;
    padding-right: 4em;
}

.decree-info p {
    margin-top: .5em;
    margin-bottom: .4em;
}

.decree-text {
    font-size: 0.95em;
    text-align: justify;
}

.decree-images {
    width: 100%;
    height: 4.5cm;
}

.decree-logo {
    width: 5.5cm;
    padding-top: 1.8cm;
}

.decree-logo img {
    width: 100%;
    margin: 0;
    padding: 0;
}
